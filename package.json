{
  "name": "gambier",
  "productName": "Gambier",
  "version": "1.0.0",
  "description": "An experimental markdown editor",
  "main": "./app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "sass": "node-sass src/styles -o app/styles --source-map true --output-style expanded",
    "rollup": "rollup -c",
    "copy:codemirror": "cpy 'lib/codemirror.css' 'lib/codemirror.js' 'addon/mode/overlay.js' 'mode/markdown/markdown.js' '../../app/js/third-party/codemirror' --cwd=node_modules/codemirror --parents",
    "copy": "run-p copy:*",
    "watch:rollup": "onchange 'src/**/*.js' 'src/**/*.svelte' -d 0 -- npm run rollup",
    "watch:sass": "onchange 'src/styles/*.scss' -d 0 -- npm run sass",
    "watch": "run-p watch:*",
    "build": "run-p sass rollup && npm run watch",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "release": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcarpenter/gambier.git"
  },
  "keywords": [
    "markdown",
    "electron"
  ],
  "author": "Josh Carpenter",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jcarpenter/gambier/issues"
  },
  "homepage": "https://github.com/jcarpenter/gambier#readme",
  "dependencies": {
    "chokidar": "^3.4.0",
    "electron-store": "^5.1.1",
    "fs-extra": "^9.0.0",
    "locale-en-us": "0.0.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "citeproc": "^2.3.8",
    "codemirror": "^5.54.0",
    "cpy-cli": "^3.1.1",
    "electron": "8.2.5",
    "electron-builder": "^22.6.1",
    "electron-reload": "^1.5.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "rollup": "^2.10.2",
    "rollup-plugin-svelte": "^5.2.2",
    "sass": "^1.26.5",
    "svelte": "^3.22.3",
    "xml-js": "^1.6.11"
  }
}
