{
  "name": "gambier",
  "productName": "Gambier",
  "version": "1.0.0",
  "description": "An experimental markdown editor",
  "main": "./app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "css": "sass --watch src/styles:app/styles --no-source-map --no-error-css --update --style=expanded",
    "rollup:dev": "rollup --config --watch",
    "rollup:build": "rollup --config",
    "svg": "svgo -f src/ -o app/ --recursive",
    "dev": "run-p css svg rollup:dev",
    "build": "run-p css svg rollup:build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "release": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcarpenter/gambier.git"
  },
  "keywords": [
    "markdown",
    "electron"
  ],
  "author": "Josh Carpenter",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jcarpenter/gambier/issues"
  },
  "homepage": "https://github.com/jcarpenter/gambier#readme",
  "dependencies": {
    "better-sqlite3": "^7.1.1",
    "bezier-easing": "^2.1.0",
    "chokidar": "^3.4.3",
    "chroma-js": "^2.1.0",
    "citeproc": "^2.4.48",
    "codemirror-markdown-list-autoindent": "^1.0.1",
    "color": "^3.1.3",
    "d": "^1.0.1",
    "debounce": "^1.2.0",
    "deep-diff": "^1.0.2",
    "deep-eql": "^4.0.0",
    "deep-object-diff": "^1.1.0",
    "electron": "^11.0.3",
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^6.0.1",
    "fs-extra": "^9.0.1",
    "gray-matter": "^4.0.2",
    "hierarchy-js": "^1.0.4",
    "image-size": "^0.9.3",
    "immer": "^8.0.0",
    "locale-en-us": "0.0.2",
    "moment": "^2.29.1",
    "nanoid": "^3.1.20",
    "node-ipc": "^9.1.3",
    "path": "^0.12.7",
    "remove-markdown": "^0.3.0",
    "sqlite3": "^5.0.0",
    "svelte": "^3.30.1",
    "turndown": "^6.0.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "codemirror": "^5.58.2",
    "colors": "^1.4.0",
    "cpy-cli": "^3.1.1",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.4",
    "electron-reload": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.34.0",
    "rollup-plugin-svelte": "^6.1.1",
    "sass": "^1.29.0",
    "svelte-check": "^1.1.28",
    "svelte-preprocess": "^4.6.1",
    "svgo": "^1.3.2"
  }
}
