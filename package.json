{
  "name": "gambier",
  "productName": "Gambier",
  "version": "1.0.0",
  "description": "An experimental markdown editor",
  "main": "./app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "sass": "node-sass --watch src/styles -o app/styles --source-map true --output-style expanded",
    "rollup:dev": "rollup --config --watch",
    "rollup:build": "rollup --config",
    "dev": "run-p sass rollup:dev",
    "build": "run-p sass rollup:build",
    "start": "electron --inspect=5858 .",
    "pack": "electron-builder --dir",
    "release": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcarpenter/gambier.git"
  },
  "keywords": [
    "markdown",
    "electron"
  ],
  "author": "Josh Carpenter",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jcarpenter/gambier/issues"
  },
  "homepage": "https://github.com/jcarpenter/gambier#readme",
  "dependencies": {
    "chokidar": "^3.4.0",
    "deep-eql": "^4.0.0",
    "deep-object-diff": "^1.1.0",
    "electron-store": "^5.1.1",
    "fs-extra": "^9.0.0",
    "gray-matter": "^4.0.2",
    "locale-en-us": "0.0.2",
    "path": "^0.12.7",
    "remove-markdown": "^0.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "citeproc": "^2.3.8",
    "codemirror": "^5.54.0",
    "colors": "^1.4.0",
    "cpy-cli": "^3.1.1",
    "electron": "8.2.5",
    "electron-builder": "^22.6.1",
    "electron-reload": "^1.5.0",
    "hierarchy-js": "^1.0.4",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.10.2",
    "rollup-plugin-svelte": "^5.2.2",
    "sass": "^1.26.5",
    "svelte": "^3.22.3",
    "svelte-preprocess": "^3.7.4",
    "xml-js": "^1.6.11"
  }
}
