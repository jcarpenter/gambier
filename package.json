{
  "name": "gambier",
  "productName": "Gambier",
  "version": "1.0.0",
  "description": "An experimental markdown editor",
  "main": "./app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "sass": "node-sass --watch --recursive src/styles -o app/styles --source-map true --output-style expanded",
    "rollup:dev": "rollup --config --watch",
    "rollup:build": "rollup --config",
    "svg": "svgo -f src/styles -o app/styles --recursive",
    "dev": "run-p sass svg rollup:dev",
    "build": "run-p sass svg rollup:build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "release": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcarpenter/gambier.git"
  },
  "keywords": [
    "markdown",
    "electron"
  ],
  "author": "Josh Carpenter",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jcarpenter/gambier/issues"
  },
  "homepage": "https://github.com/jcarpenter/gambier#readme",
  "dependencies": {
    "chokidar": "^3.4.0",
    "citeproc": "^2.3.8",
    "codemirror-markdown-list-autoindent": "^1.0.1",
    "colors": "^1.4.0",
    "deep-diff": "^1.0.2",
    "deep-eql": "^4.0.0",
    "deep-object-diff": "^1.1.0",
    "electron": "8.2.5",
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^5.1.1",
    "fs-extra": "^9.0.0",
    "fuse.js": "^6.0.4",
    "gray-matter": "^4.0.2",
    "hierarchy-js": "^1.0.4",
    "immer": "^7.0.14",
    "locale-en-us": "0.0.2",
    "moment": "^2.27.0",
    "nanoid": "^3.1.16",
    "path": "^0.12.7",
    "remove-markdown": "^0.3.0",
    "svelte": "^3.22.3",
    "turndown": "^6.0.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "codemirror": "^5.54.0",
    "cpy-cli": "^3.1.1",
    "electron-builder": "^22.6.1",
    "electron-reload": "^1.5.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.10.2",
    "rollup-plugin-svelte": "^5.2.2",
    "sass": "^1.26.5",
    "svelte-preprocess": "^3.7.4",
    "svgo": "^1.3.2"
  }
}
