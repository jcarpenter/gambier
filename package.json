{
  "name": "gambier",
  "productName": "Gambier",
  "version": "1.0.0",
  "description": "An experimental markdown editor",
  "main": "./app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf app && mkdir app",
    "rollup:dev": "rollup --config --watch",
    "rollup:build": "rollup --config",
    "html": "cp -R src/html/ app/",
    "themes": "sass --watch src/styles:app/styles --no-source-map --no-error-css --update --style=expanded",
    "images:svg": "svgo -f src/ -o app/ --recursive --quiet",
    "images": "run-p images:*",
    "third-party-js": "cp -R src/js/third-party app/third-party",
    "references": "cp -R src/references app/references",
    "dev": "npm run clean && run-p html themes images references third-party-js rollup:dev",
    "build": "npm run clean && run-p html themes images references third-party-js rollup:build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcarpenter/gambier.git"
  },
  "keywords": [
    "markdown",
    "electron"
  ],
  "author": "Josh Carpenter",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jcarpenter/gambier/issues"
  },
  "homepage": "https://github.com/jcarpenter/gambier#readme",
  "dependencies": {
    "@colors/colors": "^1.5.0",
    "better-sqlite3": "^7.5.1",
    "bezier-easing": "^2.1.0",
    "chokidar": "^3.5.3",
    "chroma-js": "^2.4.2",
    "citeproc": "^2.4.62",
    "debounce": "^1.2.1",
    "deep-eql": "^4.0.1",
    "electron-localshortcut": "^3.2.1",
    "fs-extra": "^10.0.1",
    "gray-matter": "^4.0.3",
    "hierarchy-js": "^1.0.4",
    "image-size": "^1.0.1",
    "immer": "^9.0.12",
    "locale-en-us": "0.0.2",
    "mime-types": "^2.1.35",
    "moment": "^2.29.2",
    "nanoid": "^3.3.2",
    "node-ipc": "10.1.0",
    "path": "^0.12.7",
    "remove-markdown": "^0.3.0",
    "svelte": "^3.47.0",
    "svelte-resize-observer": "^2.0.0",
    "turndown": "^7.1.1",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.2.0",
    "codemirror": "^5.65.2",
    "electron": "^18.0.3",
    "electron-builder": "22.5.1",
    "electron-rebuild": "^3.2.7",
    "electron-reload": "^1.5.0",
    "electron-store": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.70.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "sass": "^1.50.0",
    "svelte-check": "^2.6.0",
    "svelte-preprocess": "^4.10.5",
    "svgo": "^2.8.0"
  }
}
